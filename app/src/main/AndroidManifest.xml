<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".InmobApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inmob"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- MainActivity ya NO es la actividad de lanzamiento -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Inmob.NoActionBar">
            <!-- El intent-filter que estaba aquí fue movido -->
        </activity>

        <!-- LoginActivity es AHORA la actividad de lanzamiento -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- =================================================================== -->
        <!--     CLAVE DE API DE GOOGLE MAPS (AÑADIDA AQUÍ)                      -->
        <!-- =================================================================== -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAutAZGhPMGbVEYecChy2efQ0t88U4rF-c" />

    </application>

</manifest>
