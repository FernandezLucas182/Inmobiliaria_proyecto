<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_inicio">

    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.example.inmob.ui.inicio.InicioFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.example.inmob.ui.perfil.PerfilFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_perfil"

        >
        <action
            android:id="@+id/action_perfilFragment_to_PassFragment"
            app:destination="@id/nav_pass" />
    </fragment>

    <fragment
        android:id="@+id/nav_pass"
        android:name="com.example.inmob.ui.pass.PassFragment"
        android:label="@string/cambiar_clave"
        tools:layout="@layout/fragment_pass" />

    <fragment
    android:id="@+id/nav_inmuebles"
    android:name="com.example.inmob.ui.inmuebles.InmueblesFragment"
    android:label="@string/menu_inmuebles"
    tools:layout="@layout/fragment_inmueble" >
    <!-- =============================================================== -->
    <!--  ACCIÃ“N PARA NAVEGAR DESDE LA LISTA AL DETALLE -->
    <!-- =============================================================== -->
    <action
        android:id="@+id/action_nav_inmuebles_to_detalleInmuebleFragment"
        app:destination="@id/detalleInmuebleFragment" />
        <action
            android:id="@+id/action_nav_inmuebles_to_agregarInmuebleFragment"
            app:destination="@id/agregarInmuebleFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_inquilinos"
        android:name="com.example.inmob.ui.inquilinos.InquilinosFragment"
        android:label="@string/menu_inquilinos"
        tools:layout="@layout/fragment_inquilinos" />

    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.example.inmob.ui.contratos.ContratosFragment"
        android:label="@string/menu_contratos"
        tools:layout="@layout/fragment_contratos" />
    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.example.inmob.ui.inmuebles.DetalleInmuebleFragment"
        android:label="Detalle del Inmueble"
        tools:layout="@layout/fragment_detalle_inmueble" >
        <!-- =============================================================== -->
        <!--  ARGUMENTO PARA RECIBIR EL OBJETO INMUEBLE -->
        <!-- =============================================================== -->
        <argument
            android:name="inmueble"
            app:argType="com.example.inmob.model.Inmueble"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/agregarInmuebleFragment"
        android:name="com.example.inmob.ui.inmuebles.AgregarInmuebleFragment"
        android:label="fragment_agregar_inmueble"
        tools:layout="@layout/fragment_agregar_inmueble" >
        <action
            android:id="@+id/action_agregarInmuebleFragment_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>

</navigation>
