<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.contratos.InquilinosFragment">

    <!-- Título principal: más grande y con color para destacar -->
    <TextView
        android:id="@+id/tvTituloInq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles del Inquilino"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- A cada campo se le añade un TextView "Label" para describir el dato.
         Tus TextViews originales ahora muestran el valor con más estilo. -->

    <!-- CAMPO NOMBRE -->
    <TextView
        android:id="@+id/tvNombreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Nombre"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloInq" />

    <TextView
        android:id="@+id/tvNombreInqDet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Valor del Nombre"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvNombreLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CAMPO APELLIDO -->
    <TextView
        android:id="@+id/tvApellidoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Apellido"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombreInqDet" />

    <TextView
        android:id="@+id/tvApellidoInqDet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Valor del Apellido"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvApellidoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CAMPO EMAIL -->
    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Correo Electrónico"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvApellidoInqDet" />

    <TextView
        android:id="@+id/tvEmailInqDet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="correo@ejemplo.com"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CAMPO TELÉFONO -->
    <TextView
        android:id="@+id/tvTelefonoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Teléfono"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmailInqDet" />

    <TextView
        android:id="@+id/tvTelefonoInqDet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="123-4567890"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvTelefonoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
